{
  "SScriptEditor": {
    "description": "코드 에디터 컴포넌트",
    "usage": "JavaScript, YAML 등의 코드를 편집할 수 있는 에디터",
    "props": {
      "modelValue": {
        "type": "String",
        "required": false,
        "default": "",
        "description": "에디터 내용"
      },
      "height": {
        "type": ["String", "Number"],
        "required": false,
        "default": 0,
        "description": "에디터 높이 (px)"
      },
      "readonly": {
        "type": "Boolean",
        "required": false,
        "default": false,
        "description": "읽기 전용 모드 설정"
      },
      "lang": {
        "type": "String",
        "required": false,
        "default": null,
        "description": "코드 언어 설정 (yaml 등)"
      }
    },
    "features": {
      "extensions": [
        "기본 에디터 설정 (basicSetup)",
        "JavaScript 구문 강조",
        "YAML 구문 강조 (lang prop이 'yaml'일 때)",
        "One Dark 테마 (읽기 전용이 아닐 때)",
        "기본 키맵"
      ]
    },
    "example": {
      "import": ["import { SScriptEditor } from '@'"],
      "template": "<SScriptEditor v-model=\"code\" :height=\"300\" lang=\"javascript\" />"
    }
  }
}
